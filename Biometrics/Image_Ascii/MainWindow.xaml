<Window x:Class="AsciiWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AsciiWpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Image Source="{Binding ImgSource}" Height="850" Width="850" Stretch="Fill"/>
            <Slider Value="{Binding Chunk       }" Minimum="1" Maximum="255"/>
            <Slider Value="{Binding MatrixWidth }" Minimum="1" Maximum="255" />
            <Slider Value="{Binding MatrixHeight}" Minimum="1" Maximum="255" />
        </StackPanel>
    </Grid>
</Window>
